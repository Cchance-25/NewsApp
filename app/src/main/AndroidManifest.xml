<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.chance.newsapp">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".NewsCategory">
            <intent-filter
                android:label="News Categories">
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".Culture"
            android:label="Culture News Feed"
            android:parentActivityName=".NewsCategory" />
        <activity
            android:name=".Business"
            android:label="Business News Feed"
            android:parentActivityName=".NewsCategory" />
        <activity
            android:name=".Lifestyle"
            android:label="Lifestyle News Feed"
            android:parentActivityName=".NewsCategory" />

        <activity
            android:name=".Fashion"
            android:label="Fashion News Feed"
            android:parentActivityName=".NewsCategory" />

        <activity
            android:name=".EnvironmentActivity"
            android:label="Environment News Feed"
            android:parentActivityName=".NewsCategory" />

        <activity
            android:name=".Tech"
            android:label="Technology News Feed"
            android:parentActivityName=".NewsCategory" />

        <activity
            android:name=".Travel"
            android:label="Travel News Feed"
            android:parentActivityName=".NewsCategory" />
    </application>

</manifest>